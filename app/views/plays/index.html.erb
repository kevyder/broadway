<h1 class="current-category"><%= params[:category] %></h1>

<% if @plays.count.zero? %>
	<h3>There are no plays in this category</h3>
<% else %>
	<div class="row">
		<% @plays.each do |play| %>
			<div class="col-md-3">
        <%= link_to play_path(play) do %>
					<%= image_tag play.image.variant(resize_to_limit: [250, 350]), class: "play" %>
					<h2><%= play.title %></h2>
				<% end %>
			</div>
		<% end %>
	</div>
<% end %>
